{
  "name": "@aurodesignsystem/auro-cli",
  "version": "0.0.0",
  "description": "A cli tool to support the Auro Design System",
  "scripts": {
    "lint": "npx eslint --fix",
    "prepare": "husky",
    "test": "echo \"Notice: no tests available\" && exit 0",
    "dev": "nodemon --watch src --exec 'npm run build'",
    "build": "tsc && npm run copy-files && npm run bundle",
    "copy-files": "copyfiles -u 1 \"src/migrations/**/*.{yml,sh}\" dist/ && tsc-alias",
    "bundle": "node esbuild.config.js"
  },
  "license": "Apache-2.0",
  "type": "module",
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "bin": {
    "auro": "dist/auro-cli.js"
  },
  "exports": {
    ".": "./dist/auro-cli.js"
  },
  "files": [
    "dist"
  ],
  "imports": {
    "#commands/*": "./src/commands/*",
    "#scripts/*": "./src/scripts/*",
    "#utils/*": "./src/utils/*"
  },
  "workspaces": [
    "src/*",
    "migrations/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "alaska airlines",
    "auro",
    "design system",
    "web components"
  ],
  "dependencies": {
    "@aurodesignsystem/auro-library": "^4.2.1",
    "@babel/eslint-parser": "^7.27.0",
    "@babel/preset-env": "^7.26.9",
    "@open-wc/dev-server-hmr": "^0.2.0",
    "@web/dev-server": "^0.4.6",
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "figlet": "^1.8.1",
    "gradient-string": "^3.0.0",
    "inquirer": "^12.5.2",
    "ora": "^8.2.0",
    "simple-git": "^3.27.0",
    "glob": "^10.3.10"
  },
  "devDependencies": {
    "@aurodesignsystem/eslint-config": "^1.3.4",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/js": "^9.24.0",
    "@types/node": "^22.14.1",
    "copyfiles": "^2.4.1",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "nodemon": "^3.1.9",
    "prettier": "3.5.3",
    "tsc-alias": "^1.8.15",
    "typescript": "^5.8.3",
    "esbuild": "^0.19.10"
  }
}
